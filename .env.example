# HardRock Multi-League Scraper Configuration
HEADLESS=true

# Scraper Timing (seconds)
LIVE_REFRESH_INTERVAL=10
UPCOMING_REFRESH_INTERVAL=180
FULL_REFRESH_TIMEOUT=300

# Monitoring Configuration
MAX_RUNTIME_HOURS=12
CLEANUP_INTERVAL_HOURS=6
SCRAPE_INTERVAL_MINUTES=3

# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-primary-key-here

# Optional: Custom database/container names
COSMOS_DATABASE_NAME=pingpong_betting
COSMOS_CONTAINER_NAME=hardrock_matches